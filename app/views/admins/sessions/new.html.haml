%h2 Log ind

= form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal', role: 'form' } do |f|
  = devise_error_messages!

  .form-group
    = f.label :email, class: 'col-lg-2 control-label'
    .col-lg-10
      = f.email_field :email, autofocus: true, class: 'form-control'

  .form-group
    = f.label :password, class: 'col-lg-2 control-label'
    .col-lg-10
      = f.password_field :password, class: 'form-control'

  .form-group
    = f.label :remember_me, class: 'col-lg-2 control-label'
    .col-lg-10
      %label.checkbox-inline
      = f.check_box :remember_me


  .form-group
    .col-lg-10.col-lg-offset-2
      = f.submit 'Log ind', class: 'btn btn-primary btn-xs'
      = render "admins/shared/links"
